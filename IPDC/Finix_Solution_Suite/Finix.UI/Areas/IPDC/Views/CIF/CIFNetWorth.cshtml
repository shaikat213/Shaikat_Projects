@{
    ViewBag.Title = "CIF Net Worth";
    //Layout = "~/Views/Shared/_LayoutjqGrid.cshtml";
}

<style>
    .btnLarge {
        width: 140px !important;
    }

    .buttonPosition {
        margin-left: 69%;
    }
</style>
<div>

    <section class="panel-bodycontent">
        <header class="panel-heading bodytitle">
            <h2 class="panel-title font"><b>Net Worth</b></h2>
        </header>
        <br />
        <div class="container-fluid ">
            <div class="col-sm-12">
                <form class="form-horizontal" role="form">
                    <fieldset>
                        <div class="ds-content">
                            <div class="row">

                                <div class="col-sm-12">



                                    <div class="panel panel-default">
                                        <div class="panel-bodycontent">
                                            <div class="panel-heading row_design_cifNetworth">
                                                <label>Asset</label>
                                            </div>

                                            <div class="panel-body">
                                                <div class="col-sm-1">

                                                </div>
                                                <div class="col-sm-2">
                                                    <label class="control-label">Cash At hand</label>
                                                </div>
                                                <div class="col-sm-3">
                                                    <input type="number" data-bind="value:CashAtHand, valueUpdate:'keyup'" class="form-control" />
                                                </div>
                                            </div>
                                            <div class="panel-body">
                                                <div class="panel panel-default">
                                                    <div class="panel-bodycontent">
                                                        <div class="panel-heading row_design_cifNetworth">
                                                            <label>Savings in Bank</label>
                                                        </div>

                                                        <div class="panel-body">
                                                            <table class="table table-striped table-bordered">
                                                                <thead class="headcolor">
                                                                    <tr>
                                                                        <th class="col-sm-4">Bank Name</th>
                                                                        <th class="col-sm-3">Deposit Type</th>
                                                                        <th class="col-sm-3">Current Balance</th>
                                                                        <th class="col-sm-2">
                                                                            <a class="plus" href="#" data-bind="click: AddBankSavings"><span class="glyphicon glyphicon-plus"></span></a>
                                                                        </th>

                                                                    </tr>
                                                                </thead>
                                                                <tbody data-bind='foreach: SavingsInBank'>
                                                                    <tr>
                                                                        <td class="col-sm-4">
                                                                            <input type="text" data-bind="value:BankName" class="form-control" />
                                                                        </td>
                                                                        <td class="col-sm-3">
                                                                            <select data-bind="options:$parent.BankDepositTypes,value: BankDepositTypeId, optionsValue: 'Id',optionsText:'Name',optionsCaption:'--Select--', value:BankDepositType" class="form-control"></select>
                                                                        </td>

                                                                        <td class="col-sm-3">
                                                                            <input type="number" data-bind="value:CurrentBalance, valueUpdate:'keyup'" class="form-control" />
                                                                        </td>
                                                                        <td class="col-sm-2">
                                                                            <a class="plus" href="#" data-bind="click: $parent.AddBankSavings"><span class="glyphicon glyphicon-plus"></span></a>
                                                                            <a class="minus" href="#" data-bind="click: $parent.RemoveBankSavings"><span class="glyphicon glyphicon-minus"></span></a>

                                                                        </td>
                                                                    </tr>
                                                                </tbody>
                                                            </table>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="panel panel-default">
                                                    <div class="panel-bodycontent">
                                                        <div class="panel-heading row_design_cifNetworth">
                                                            <label>Investments</label>
                                                        </div>

                                                        <div class="panel-body">
                                                            <table class="table table-striped table-bordered">
                                                                <thead class="headcolor">
                                                                    <tr>
                                                                        <th class="col-sm-5">Type</th>
                                                                        <th class="col-sm-4">Amount</th>
                                                                        <th class="col-sm-2">
                                                                            <a class="plus" href="#" data-bind="click: AddInvestments"><span class="glyphicon glyphicon-plus"></span></a>
                                                                        </th>

                                                                    </tr>
                                                                </thead>
                                                                <tbody data-bind='foreach:Investments'>
                                                                    <tr>
                                                                        <td class="col-sm-5">
                                                                            <select data-bind="options:$parent.InvestmentTypes, value: InvestmentTypeId, optionsValue: 'Id',optionsText:'Name',optionsCaption:'--Select--', value:InvestmentType" class="form-control"></select>
                                                                        </td>
                                                                        <td class="col-sm-5">
                                                                            <input type="number" data-bind="value:Amount, valueUpdate:'keyup'" class="form-control" />
                                                                        </td>


                                                                        <td class="col-sm-2">
                                                                            <a class="plus" href="#" data-bind="click: $parent.AddInvestments"><span class="glyphicon glyphicon-plus"></span></a>
                                                                            <a class="minus" href="#" data-bind="click: $parent.RemoveInvestments"><span class="glyphicon glyphicon-minus"></span></a>

                                                                        </td>
                                                                    </tr>
                                                                </tbody>
                                                            </table>
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="panel-body">
                                                    <div class="col-sm-1">

                                                    </div>
                                                    <div class="col-sm-2">
                                                        <label class="control-label">Values of other Assets</label>
                                                    </div>

                                                    <div class="col-sm-3">
                                                        <input type="number" data-bind="value:OtherSavings, valueUpdate:'keyup'" class="form-control" />
                                                    </div>
                                                </div>

                                                <div class="panel panel-default">
                                                    <div class="panel-bodycontent">
                                                        <div class="panel-heading row_design_cifNetworth">
                                                            <label>Properties</label>
                                                        </div>

                                                        <div class="panel-body">
                                                            <table class="table table-striped table-bordered">
                                                                <thead class="headcolor">
                                                                    <tr>
                                                                        <th class="col-sm-5">Description</th>
                                                                        <th class="col-sm-4">Market Value</th>
                                                                        <th class="col-sm-1">Encumbered (Y/N)</th>
                                                                        <th class="col-sm-2">
                                                                            <a class="plus" href="#" data-bind="click: AddProperties"><span class="glyphicon glyphicon-plus"></span></a>
                                                                        </th>

                                                                    </tr>
                                                                </thead>
                                                                <tbody data-bind='foreach:Properties'>
                                                                    <tr>
                                                                        <td class="col-sm-5">
                                                                            <input type="text" data-bind="value:Description" class="form-control" />
                                                                        </td>
                                                                        <td class="col-sm-4">
                                                                            <input type="number" data-bind="value:MarketValue, valueUpdate:'keyup'" class="form-control" />
                                                                        </td>
                                                                        <td class="col-sm-1">
                                                                            <input type="checkbox" data-bind="checked:Encumbered" />
                                                                        </td>


                                                                        <td class="col-sm-2">
                                                                            <a class="plus" href="#" data-bind="click: $parent.AddProperties"><span class="glyphicon glyphicon-plus"></span></a>
                                                                            <a class="minus" href="#" data-bind="click: $parent.RemoveProperties"><span class="glyphicon glyphicon-minus"></span></a>

                                                                        </td>
                                                                    </tr>
                                                                </tbody>
                                                            </table>
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="panel panel-default">
                                                    <div class="panel-bodycontent">
                                                        <div class="panel-heading row_design_cifNetworth">
                                                            <label>Share in Business</label>
                                                        </div>

                                                        <div class="panel-body">
                                                            <table class="table table-striped table-bordered">
                                                                <thead class="headcolor">
                                                                    <tr>
                                                                        <th class="col-sm-5">Business Share Type</th>
                                                                        <th class="col-sm-5">Value of Ownership</th>
                                                                        <th class="col-sm-2">
                                                                            <a class="plus" href='#' data-bind='click: AddBusinessShares'><span class="glyphicon glyphicon-plus"></span></a>

                                                                        </th>

                                                                    </tr>
                                                                </thead>
                                                                <tbody data-bind='foreach:BusinessShares'>
                                                                    <tr>
                                                                        <td class="col-sm-5">
                                                                            <select data-bind="options:$parent.BusinessShareTypes, value: BusinessShareTypeId, optionsValue: 'Id',optionsText:'Name',optionsCaption:'--Select--', value:BusinessShareType" class="form-control"></select>
                                                                        </td>
                                                                        <td class="col-sm-5">
                                                                            <input type="number" data-bind="value:ValueOfOwnership, valueUpdate:'keyup'" class="form-control" />
                                                                        </td>



                                                                        <td class="col-sm-2">
                                                                            <a class="plus" href="#" data-bind="click: $parent.AddBusinessShares"><span class="glyphicon glyphicon-plus"></span></a>
                                                                            <a class="minus" href="#" data-bind="click: $parent.RemoveShareinBusines"><span class="glyphicon glyphicon-minus"></span></a>

                                                                        </td>
                                                                    </tr>
                                                                </tbody>
                                                            </table>
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="panel-body">
                                                    <div class="col-sm-1">

                                                    </div>
                                                    <div class="col-sm-2">
                                                        <label class="control-label">Total Asset</label>
                                                    </div>

                                                    <div class="col-sm-3">
                                                        <span data-bind="text:TotalAsset" class="form-control" />
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>



                                </div>

                                <div class="col-sm-12">



                                    <div class="panel panel-default">
                                        <div class="panel-bodycontent">
                                            <div class="panel-heading row_design_cifNetworth">
                                                <label>Liabilities</label>
                                            </div>

                                            <div class="panel-body">

                                                <div class="panel panel-default">
                                                    <div class="panel-bodycontent">
                                                        <div class="panel-heading row_design_cifNetworth">
                                                            <label>Details of borrowing & liabilities</label>
                                                        </div>

                                                        <div class="panel-body">
                                                            <table class="table table-striped table-bordered">
                                                                <thead class="headcolor">
                                                                    <tr>
                                                                        <th class="col-sm-2">Type of loan</th>
                                                                        <th class="col-sm-2">Amount/limit</th>
                                                                        <th class="col-sm-2">Installment amount</th>
                                                                        <th class="col-sm-2">Term (Months)</th>
                                                                        <th class="col-sm-2">Remaining term</th>
                                                                        <th class="col-sm-2">Outstanding Amount</th>
                                                                        <th class="col-sm-4">Name of bank/Financial institution </th>
                                                                        <th class="col-sm-4">Borrower</th>
                                                                        <th class="col-sm-2">
                                                                            <a class="plus" href="#" data-bind="click: AddLiabilities"><span class="glyphicon glyphicon-plus"></span></a>
                                                                        </th>

                                                                    </tr>
                                                                </thead>
                                                                <tbody data-bind='foreach:Liabilities'>
                                                                    <tr>
                                                                        <td class="col-sm-2">
                                                                            <select data-bind="options:$parent.LoanTypes, value: LoanTypeId, optionsValue: 'Id',optionsText:'Name',optionsCaption:'--Select--', value:LoanType" class="form-control"></select>
                                                                        </td>
                                                                        <td class="col-sm-2">
                                                                            <input type="number" data-bind="value:LoanAmountOrLimit, valueUpdate:'keyup'" class="form-control" />
                                                                        </td>

                                                                        <td class="col-sm-2">
                                                                            <input type="number" data-bind="value:InstallmentAmount, valueUpdate:'keyup'" class="form-control" />
                                                                        </td>
                                                                        <td class="col-sm-2">
                                                                            <input type="number" data-bind="value:Term" class="form-control" />
                                                                        </td>
                                                                        <td class="col-sm-2">
                                                                            <input type="number" data-bind="value:RemainingTerm, valueUpdate:'kyeup'" class="form-control" />
                                                                        </td>

                                                                        <td class="col-sm-2">
                                                                            <input type="number" data-bind="value:OutstandingAmount, valueUpdate:'kyeup'" class="form-control" />
                                                                        </td>
                                                                        <td class="col-sm-4">
                                                                            <input type="text" data-bind="value:BankOrFIName" class="form-control" />
                                                                        </td>
                                                                        <td class="col-sm-4">
                                                                            <select data-bind="options:$parent.LiabilityTypes, value:LiabilityTypeId, optionsValue: 'Id',optionsText:'Name',optionsCaption:'--Select--', value:LiabilityType" class="form-control"></select>
                                                                        </td>

                                                                        <td class="col-sm-2">
                                                                            <a class="plus" href="#" data-bind="click: $parent.AddLiabilities"><span class="glyphicon glyphicon-plus"></span></a>
                                                                            <a class="minus" href="#" data-bind="click: $parent.RemoveLiabilities"><span class="glyphicon glyphicon-minus"></span></a>

                                                                        </td>
                                                                    </tr>
                                                                </tbody>
                                                            </table>
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="panel-body">
                                                    <div class="col-sm-1"></div>
                                                    <div class="col-sm-2">
                                                        <label class="control-label">Office Loan</label>
                                                    </div>

                                                    <div class="col-sm-3">
                                                        <input type="number" data-bind="value:OfficeLoan,valueUpdate:'keyup'" class="form-control" />
                                                    </div>
                                                    <div class="col-sm-1"></div>
                                                </div>

                                                <div class="panel-body">
                                                    <div class="col-sm-1"></div>
                                                    <div class="col-sm-2">
                                                        <label class="control-label">Unpaid Taxes</label>
                                                    </div>

                                                    <div class="col-sm-3">
                                                        <input type="number" data-bind="value:UnpaidTaxes,valueUpdate:'keyup'" class="form-control" />
                                                    </div>
                                                </div>

                                                <div class="panel-body">
                                                    <div class="col-sm-1"></div>
                                                    <div class="col-sm-2">
                                                        <label class="control-label">Others</label>
                                                    </div>

                                                    <div class="col-sm-3">
                                                        <input type="number" data-bind="value:OtherLiabilities, valueUpdate:'keyup'" class="form-control" />
                                                    </div>
                                                    <div class="col-sm-1"></div>
                                                </div>

                                                <div class="panel-body">
                                                    <div class="col-sm-1"></div>
                                                    <div class="col-sm-2">
                                                        <label class="control-label">Total Liabilities</label>
                                                    </div>

                                                    <div class="col-sm-3">
                                                        <span data-bind="text:TotalLiabilities" class="form-control" />
                                                    </div>
                                                    <div class="col-sm-1"></div>
                                                </div>

                                                <div class="panel-body">
                                                    <div class="col-sm-1"></div>
                                                    <div class="col-sm-2">
                                                        <label class="control-label">Net Worth </label>
                                                    </div>

                                                    <div class="col-sm-3">
                                                        <span data-bind="text:NetWorth" class="form-control" />
                                                    </div>
                                                    <div class="col-sm-1"></div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>



                                </div>

                            </div>
                        </div>
                    </fieldset>

                    <div class="col-sm-12">


                        <div class="ds-content">
                            <div class="row">
                                <div class="form-group row row_design">

                                    <div class="col-sm-5 buttonPosition">
                                        <button type="submit" data-bind="click:Submit" class="btn btn-success btnLarge">Save</button>
                                        <button type="submit" data-bind="click:Reset" class="btn btn-default btnLarge">Create New</button>
                                    </div>
                                </div>
                            </div>
                        </div>


                    </div>
                </form>

            </div>

        </div>
    </section>

    <div>
        <div id="NWsuccessModal" class="modal fade" role="dialog">
            <div class="modal-dialog modal-sm">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Response</h4>
                    </div>
                    <div class="modal-body" align="center">
                        <p id="NWsuccessModalText"></p>
                        <button type="button" class="btn btn-success" data-dismiss="modal">Ok</button>
                    </div>
                    <div class="modal-footer">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


