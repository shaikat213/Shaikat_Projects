<link href="~/Content/bootstrap-datetimepicker.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap-datetimepicker.js"></script>
<script src="~/Scripts/jquery-ui-1.11.4.min.js"></script>
<script src="~/Scripts/moment.js"></script>
<script src="~/Scripts/knockout-date-bindings.js"></script>
<link href="~/Content/customassets/css/salesLead.css" rel="stylesheet" />
<script src="~/Areas/IPDC/Scripts/Designation/employee-designation-mapping.js"></script>
<link href="~/Content/customassets/css/officeDesignationArea.css" rel="stylesheet" />
@{
    ViewBag.Title = "Employee Designation Mapping";
    Layout = "~/Views/Shared/_LayoutjqGrid.cshtml";
}


<div id="employeeDesignationMapping">
    <section class="deg">
        <div class="container-fluid ">
            <form class="form-horizontal" role="form" id="employee-info">
                <fieldset>
                    <div class="ds-content">
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="form-group row row_design">
                                    <div class="col-sm-1">

                                    </div>


                                    <div class="col-sm-2">
                                        <label for="OfficeLayerId" class="control-label">Office Layer<span class="required"></span></label>
                                    </div>
                                    <div class="col-sm-3" data-bind="validationElement: OfficeLayerId">
                                        <select data-bind=" options: OfficeLayers, value: OfficeLayerId, optionsCaption:'Choose One..', optionsValue:'Id', optionsText: 'Name', event:{change: LoadOffices }" class=" form-control"></select>
                                    </div>


                                    <div class="col-sm-2">
                                        <label class="control-label">Employee<span class="required"></span></label>
                                    </div>
                                    <div class="col-sm-3">
                                        @*<input type="text" class="form-control" placeholder="Search By Employee Name" required id="auto" data-bind="value:prefix,valueUpdate: ['afterkeyup', 'input'], jqAuto: { autoFocus: true }, jqAutoSource: poNumberList, jqAutoValue: selectedPoNoKey, jqAutoSourceLabel: 'key', jqAutoSourceInputValue: 'key', jqAutoSourceValue: 'key'" />*@
                                        <select data-bind=" options: EmployeeList, value: EmployeeId, optionsCaption:'Choose One..', optionsValue:'Id', optionsText: 'Name'" class=" form-control"></select>

                                    </div>
                                    <div class="col-sm-1">

                                    </div>

                                </div>
                                <div class="form-group row row_design">
                                    <div class="col-sm-1">

                                    </div>
                                    <div class="col-sm-2">
                                        <label for="OfficeId" class="control-label">Office<span class="required"></span></label>
                                    </div>
                                    <div class="col-sm-3" data-bind="validationElement: OfficeId">
                                        <select data-bind=" options: Offices, value: OfficeId, optionsCaption:'Choose One..', optionsValue:'Id', optionsText: 'Name', event:{change: LoadDesignations }" class=" form-control"></select>
                                    </div>

                                    <div class="col-sm-2">
                                        <label for="ProductId" class="control-label">Organogram<span class="required"></span></label>
                                    </div>
                                    <div class="col-sm-3" data-bind="validationElement: DesignationId">
                                        <select data-bind=" options: Designations, value: DesignationId, optionsCaption:'Choose One..', optionsValue:'Id', optionsText: 'Name', event:{change: LoadDesignatedEmployees}" class=" form-control"></select>
                                    </div>
                                    <div class="col-sm-1">

                                    </div>



                                    @*<div class="col-sm-2">
                            <label for="DistrictId" class="control-label">District<span class="required"></span></label>
                        </div>
                        <div class="col-sm-2" data-bind="validationElement: DistrictId">
                            <select data-bind=" options: Districts, value: DistrictId, optionsCaption:'Choose One..', optionsValue:'Id', optionsText: 'Name'" class=" form-control"></select>
                        </div>
                        <div class="col-sm-1"></div>*@
                                </div>

                                <div class="form-group row row_design">



                                    @*<div class="col-sm-2">
                            <label for="UpazilaId" class="control-label">Upazila<span class="required"></span></label>
                        </div>
                        <div class="col-sm-2" data-bind="validationElement: UpazilaId">
                            <select data-bind=" options: Upazilas, value: UpazilaId, optionsCaption:'Choose One..', optionsValue:'Id', optionsText: 'Name'" class=" form-control"></select>
                        </div>
                        <div class="col-sm-1"></div>*@

                                    <div class="row">
                                        <div class="col-sm-2">

                                        </div>
                                        <div class="col-sm-8">
                                            <table class="table table-striped table-bordered" style="font-size: 13px">
                                                <thead class="headcolor">
                                                    <tr>
                                                        <th class="center">Organogram</th>
                                                        <th class="center">Employee Name</th>
                                                        <th class="center">Employee Code</th>
                                                        <th class="center">Remove</th>
                                                    </tr>
                                                </thead>
                                                <tbody data-bind="foreach: DesignatedEmployees">
                                                    <tr>
                                                        <td data-bind="text:OfficeDesignationSettingName"></td>
                                                        <td data-bind="text:EmployeeName"></td>
                                                        <td data-bind="text:EmpCode"></td>
                                                        <td><a data-bind="click: $parent.RemoveDesignation" href="#">Remove</a></td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </div>

                                        <div class="col-sm-2">

                                            </div>

                                    </div>
                                </div>

                            </div>

                        </div>

                        <div class="form-group row row_design">
                            <div class="row">
                                <div class="col-sm-5">

                                </div>

                                <div class="col-sm-3" style="float:right;">
                                    
                                    <button type="submit" data-bind="click:Save" class="btn btn-success" data-dismiss="modal">Save</button>
                                    <button type="reset" class="btn btn-default">Reset</button>
                                     
                                </div>
                                <div class="col-sm-4">
                                    
                                </div>
                            </div>
                        </div>
                    </div>

                </fieldset>
            </form>
        </div>
    </section>
    <div class="form-group">
        <div id="successModal" class="modal fade" role="dialog">
            <div class="modal-dialog modal-sm">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Response</h4>
                    </div>
                    <div class="modal-body" align="center">
                        <p id="successModalText"></p>

                        <button type="button" class="btn btn-success" data-dismiss="modal">Ok</button>

                    </div>
                    <div class="modal-footer">
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>


