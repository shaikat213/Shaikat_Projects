<section class="panel-bodycontent" id="replyforwardmessage">
    <header class="panel-heading bodytitle">
        <h2 class="panel-title font">
            <b>New Message</b>
        </h2>
    </header>

    <br />

    <div>
        <div class="container-fluid">
            <div class="row">
                <section class="rm">
                    <div class="panel-body">

                        <fieldset>
                            <div class="row">
                                <div class="col-sm-12">

                                    <div class="form-group row row_design">
                                        <div class="col-sm-3 infoTextAlign">
                                            <label class="control-label">Application No :</label>
                                        </div>
                                        <div class="col-sm-3">
                                            <input type="text" class="form-control" data-bind="value:ApplicationNo" readonly="readonly" />
                                        </div>

                                        <div class="col-sm-3">
                                            <label class="control-label infoTextAlign">Application Title :</label>
                                        </div>
                                        <div class="col-sm-3">
                                            <input type="text" class="form-control" data-bind="value:AccountTitle" readonly="readonly" />
                                        </div>
                                    </div>

                                    <br />
                                    <div class="form-grop row row_design">
                                        <div class="col-sm-9 col-sm-offset-4">
                                            <span data-bind="text:FromEmpId" hidden></span>
                                            <div class="col-sm-2">
                                                <label class="control-label" style="text-align: left;">To :</label>
                                            </div>
                                            <div class="col-sm-3">
                                                <input type="text" class="form-control" data-bind="value:FromEmpName" readonly="readonly" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </fieldset>

                    </div>
                </section>
            </div>
        </div>
        <br />

        <!--start APPLICATION DETAILS-->

        <div class="panel panel-default">

            <div class="panel-heading">
                <label class="headingOcc col-sm-offset-1">Write New Message</label>
            </div>
            <div class="panel-body">
                <div class="col-lg-12">
                    <form class="form-horizontal" role="form">
                        <div class="col-sm-12">
                            <div class="form-group row row_design">
                                <textarea data-bind="wysiwyg: Message"></textarea>
                            </div>
                        </div>
                        <br/>
                        <div class="form-group">
                            <div id="cibSuccessModal" class="modal fade" role="dialog">
                                <div class="modal-dialog modal-sm">
                                    <!-- Modal content-->
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                                            <h4 class="modal-title">Response</h4>
                                        </div>
                                        <div class="modal-body" align="center">
                                            <p id="cibSuccessModalText"></p>
                                            <button type="button" class="btn btn-success" data-dismiss="modal">Ok</button>
                                        </div>
                                        <div class="modal-footer">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <br />
                        <div class="form-group row row_design">
                            <div class="col-sm-6 col-sm-offset-9">
                                <div class="col-sm-3">
                                    <button type="button" class="btnLarge btn-q btn-default" data-bind="click:SubmitAsDraft">Save as Draft</button> @*, enable :IsValid*@
                                </div>
                                <div class="col-sm-3 col-sm-offset-1">
                                    <button type="button" class="btn btn-success" data-bind="click:SendMessage">Sent</button> @*, enable :IsValid*@
                                </div>
                            </div>
                        </div>
                        
                        <br />
                        <div class="row">
                            <div class="col-sm-12">
                                <table class="table table-striped table-bordered" frame="box">
                                    <thead class="headcolor">
                                    <tr>
                                        <th>Posted By</th>
                                        <th class="center">Message Thread</th>
                                        @*<th colspan="2"></th>*@
                                    </tr>
                                    </thead>
                                    <tbody data-bind="foreach:IpdcMessaging">
                                    <tr>
                                        <td class="center" data-bind="text:FromEmpName"></td>
                                        <td class="center" data-bind="html:Message"></td>
                                        @*<td>
                                            <button type="button" class="btn-i btn-info" data-toggle="modal" data-target="#submitModal" data-bind='' title="Forward">
                                                <span class="glyphicon glyphicon-align-justify" aria-hidden="true"></span>
                                            </button>
                                          
                                        </td>*@
                                    </tr>
                                    </tbody>
                                </table>
                                <div class="pagination-centered">
                                </div>
                            </div>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</section>







