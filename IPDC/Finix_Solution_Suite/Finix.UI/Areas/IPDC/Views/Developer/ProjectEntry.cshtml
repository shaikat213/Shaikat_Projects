<script src="~/Scripts/jquery-ui-1.11.4.min.js"></script>
<script src="~/Scripts/moment.js"></script>
<script src="~/Areas/IPDC/Scripts/addressJsViewModel.js"></script>

<link href="~/Content/customassets/css/officeDesignationArea.css" rel="stylesheet" />
<link href="~/Areas/IPDC/Content/cif.css" rel="stylesheet" />
<script src="~/Areas/IPDC/Scripts/Developer/ProjectEntry.js"></script>
<link href="~/Content/customassets/css/cifIncomeStatement.css" rel="stylesheet" />
<link href="~/Content/customassets/css/application.css" rel="stylesheet" />
<link href="~/Content/bootstrap-datetimepicker.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap-datetimepicker.js"></script>
<script src="~/Scripts/knockout-date-bindings.js"></script>
<script src="~/Scripts/KoCustomDateTimePicker.js"></script>

@{
    ViewBag.Title = "Project Entry";
    Layout = "~/Views/Shared/_LayoutjqGrid.cshtml";
}

<style>
    .btnLarge {
        width: 140px !important;
    }

    .buttonPosition {
        margin-left: 69%;
    }
</style>
<div id="projectEntry">

    <section class="panel-bodycontent">
        <header class="panel-heading bodytitle">
            <h2 class="panel-title font">
                <b>Project Entry</b>
            </h2>
        </header>
        <br />
        <section>
            <div class="container-fluid ">
                <div class="row">
                    <div class="col-sm-12">
                        <form class="form-horizontal" role="form">
                            <div class="col-sm-8">
                                <div class="form-group row row_design" data-bind="">

                                    <div class="col-sm-3">
                                        <label class="control-label">Developer :</label>
                                    </div>
                                    <div class="col-sm-9">
                                        <select class="form-control" data-bind="options:DeveloperList, optionsValue: 'Id', optionsText:'GroupName', optionsCaption:'--Select--',value:DeveloperId"></select>
                                    </div>
                                </div>

                                <div class="form-group row row_design" data-bind="">

                                    <div class="col-sm-3">
                                        <label class="control-label">Project Name :</label>
                                    </div>
                                    <div class="col-sm-9">
                                        <input type="text" data-bind="value:ProjectName" class="form-control">
                                    </div>
                                </div>

                                <div class="form-group row row_design" data-bind="">

                                    <div class="col-sm-3">
                                        <label class="control-label">Area (Katha) :</label>
                                    </div>
                                    <div class="col-sm-9">
                                        <input type="number" data-bind="value:Area" class="form-control">
                                    </div>
                                </div>

                                <div class="form-group row row_design" data-bind="">

                                    <div class="col-sm-3">
                                        <label class="control-label">Total Saleable Units :</label>
                                    </div>
                                    <div class="col-sm-9">
                                        <input type="number" data-bind="value:TotalSaleableUnits" class="form-control">
                                    </div>
                                </div>

                                <div class="form-group row row_design" data-bind="">

                                    <div class="col-sm-3">
                                        <label class="control-label">Total Sold Units :</label>
                                    </div>
                                    <div class="col-sm-9">
                                        <input type="number" data-bind="value:TotalSoldUnits" class="form-control">
                                    </div>
                                </div>

                                <br />

                                <div class="form-group row row_design" data-bind="">

                                    <div class="col-sm-3">
                                        <strong> Project Address</strong>
                                    </div>

                                </div>
                                <br />
                                <div class="form-group row row_design">

                                    <div class="col-sm-3">
                                        <label class="control-label duplicateAlignment">Address line 1</label>
                                    </div>
                                    <div class="col-sm-9">
                                        <input type="text" data-bind="value:ProjectAddress.AddressLine1 , event : { change : ProjectAddress.IsAddressChanged}" class="form-control" />
                                    </div>
                                </div>

                                <div class="form-group row row_design">

                                    <div class="col-sm-3">
                                        <label class="control-label duplicateAlignment">Address line 2</label>
                                    </div>
                                    <div class="col-sm-9">
                                        <input type="text" data-bind="value:ProjectAddress.AddressLine2, event : { change : ProjectAddress.IsAddressChanged}" class="form-control" />
                                    </div>

                                </div>

                                <div class="form-group row row_design">

                                    <div class="col-sm-3">
                                        <label class="control-label duplicateAlignment">Address line 3</label>
                                    </div>
                                    <div class="col-sm-9">
                                        <input type="text" data-bind="value:ProjectAddress.AddressLine3, event : { change : ProjectAddress.IsAddressChanged}" class="form-control" />
                                    </div>
                                </div>

                                <div class="form-group row row_design">

                                    <div class="col-sm-3">
                                        <label class="control-label duplicateAlignment">Country</label>
                                    </div>
                                    <div class="col-sm-3">
                                        <select data-bind="options:CountryList, value: ProjectAddress.CountryId, optionsCaption:'Choose One..', optionsValue:'Id', optionsText: 'Name'  ,event : { change : ProjectAddress.IsAddressChanged}" class="form-control"></select>@*event:{change : LoadFactoryDivisionByCountry}*@
                                    </div>
                                    <div class="col-sm-2">
                                        <label class="control-label">Phone</label>
                                    </div>
                                    <div class="col-sm-4">
                                        <input type="text" data-bind="value:ProjectAddress.PhoneNo , event : { change : ProjectAddress.IsAddressChanged}" class="form-control" />
                                    </div>
                                </div>

                                <div class="form-group row row_design">

                                    <div class="col-sm-3">
                                        <label class="control-label duplicateAlignment">Division</label>
                                    </div>
                                    <div class="col-sm-3">
                                        <select data-bind="options:ProjectAddress.DivisionList, value: ProjectAddress.DivisionId, optionsCaption:'Choose One..', optionsValue:'Id', optionsText: 'DivisionNameEng',  event : { change : ProjectAddress.IsAddressChanged}" class="form-control"></select>@*,event:{change : getFactoryDistrictByDivision}*@
                                    </div>
                                    <div class="col-sm-2">
                                        <label class="control-label">Cell Phone</label>
                                    </div>
                                    <div class="col-sm-4">
                                        <input type="text" data-bind="value:ProjectAddress.CellPhoneNo , event : { change : ProjectAddress.IsAddressChanged}" class="form-control" />
                                    </div>
                                </div>

                                <div class="form-group row row_design">

                                    <div class="col-sm-3">
                                        <label class="control-label">District</label>
                                    </div>
                                    <div class="col-sm-3">
                                        <select data-bind="options:ProjectAddress.DistrictList, value: ProjectAddress.DistrictId, optionsCaption:'Choose One..', optionsValue:'Id', optionsText: 'DistrictNameEng' , event : { change : ProjectAddress.IsAddressChanged}" class="form-control"></select>
                                    </div>
                                    <div class="col-sm-2">
                                        <label class="control-label">E-mail</label>
                                    </div>
                                    <div class="col-sm-4">
                                        <input type="email" data-bind="value:ProjectAddress.Email , event : { change : ProjectAddress.IsAddressChanged}" class="form-control" />
                                    </div>
                                </div>

                                <div class="form-group row row_design">

                                    <div class="col-sm-3">
                                        <label class="control-label">Thana</label>
                                    </div>
                                    <div class="col-sm-3">
                                        <select data-bind="options:ProjectAddress.ThanaList, value: ProjectAddress.ThanaId, optionsCaption:'Choose One..', optionsValue:'Id', optionsText: 'ThanaNameEng' , event : { change : ProjectAddress.IsAddressChanged}" class="form-control"></select>
                                    </div>

                                </div>

                                <div class="form-group row row_design">

                                    <div class="col-sm-3">
                                        <label class="control-label">Postal Code</label>
                                    </div>
                                    <div class="col-sm-3">
                                        <input type="text" data-bind="value:ProjectAddress.PostalCode , event : { change : ProjectAddress.IsAddressChanged}" class="form-control" />
                                    </div>
                                </div>

                                <br />

                                <div class="form-group row row_design" data-bind="">

                                    <div class="col-sm-3">
                                        <strong> Project Status Reports</strong>
                                    </div>

                                </div>
                                <br />

                                <div class="form-group row row_design" data-bind="">

                                    <div class="col-sm-3">
                                        <label class="control-label">Hand Over Date :</label>
                                    </div>
                                    <div class="col-sm-3 input-group" style="padding-left: 15px; padding-right: 15px;">
                                        <input type="text" class="form-control" data-bind="datepicker:HandoverDate, datepickerOptions: {format: 'DD/MM/YYYY'}, valueUpdate:'keyup'">
                                        <span class="help-block" style="display: none;"></span>
                                        <div class="input-group-addon">
                                            <span class="glyphicon glyphicon-calendar"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group row row_design" data-bind="">

                                    <div class="col-sm-3">
                                        <label class="control-label">Project Entry Date</label>
                                    </div>
                                    <div class="col-sm-3 input-group" style="padding-left: 15px; padding-right: 15px;">
                                        <input type="text" class="form-control" data-bind="datepicker:AsOfDate, datepickerOptions: {format: 'DD/MM/YYYY'}, valueUpdate:'keyup'">
                                        <span class="help-block" style="display: none;"></span>
                                        <div class="input-group-addon">
                                            <span class="glyphicon glyphicon-calendar"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group row row_design" data-bind="">

                                    <div class="col-sm-3">
                                        <label class="control-label">Developer Project Status :</label>
                                    </div>
                                    <div class="col-sm-3">
                                        <select class="form-control" data-bind="options:DeveloperProjectStatusList, optionsValue: 'Id', optionsText:'Name', optionsCaption:'--Select--',value:DeveloperProjectStatus"></select>
                                    </div>
                                </div>

                                <div class="form-group row row_design" data-bind="">

                                    <div class="col-sm-3">
                                        <label class="control-label">Constraction Stage</label>
                                    </div>
                                    <div class="col-sm-3">
                                        <input type="text" data-bind="value:ConstructionStage" class="form-control">
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-12">
                                <div class="row">
                                    <div class="form-group row row_design">
                                        <div class="col-sm-6 buttonPosition">
                                            <button type="button" data-togle="modal" data-targer="#successModal" data-bind="click:Submit" class="btn btn-success">Save</button>
                                        </div>
                                    </div>
                                </div>
                            </div>


                        </form>
                    </div>
                </div>
            </div>
            <div id="successModal" class="modal fade" role="dialog">
                <div class="modal-dialog modal-sm">
                    <!-- Modal content-->
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h4 class="modal-title">Response</h4>
                        </div>
                        <div class="modal-body" align="center">
                            <p id="successModalText"></p>
                            <button type="button" class="btn btn-success" data-dismiss="modal">Ok</button>
                        </div>
                        <div class="modal-footer">
                        </div>
                    </div>
                </div>
            </div>
        </section>


    </section>
</div>


