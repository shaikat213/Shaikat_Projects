@{
    ViewBag.Title = "EMI Calculator";
    Layout = "~/Views/Shared/_LayoutjqGrid.cshtml";
}
<link href="~/Content/bootstrap-datetimepicker.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap-datetimepicker.js"></script>
<script src="~/Scripts/jquery-ui-1.11.4.min.js"></script>
<script src="~/Scripts/moment.js"></script>
<script src="~/Scripts/knockout-date-bindings.js"></script>
<script src="~/Areas/IPDC/Scripts/Calculation/dbrIncomeRange.js"></script>
<script src="~/Areas/IPDC/Scripts/Calculation/EMICalculator.js"></script>
<link href="~/Content/customassets/css/cifIncomeStatement.css" rel="stylesheet" />
<link href="~/Areas/IPDC/Content/LoanCalculation.css" rel="stylesheet" />

<style>
    .form-control {
        width: 100% !important;
        padding: 3px 3px !important;
    }

    .input-group-addon {
        padding: 0 5px;
    }

    .row {
        margin-right: 0px !important;
        margin-left: 0px !important;
    }

    .container-fluid {
        margin-left: -15px !important;
        margin-right: -15px !important;
    }
</style>

<section class="panel-bodycontent">
    <header class="panel-heading bodytitle">
        <h2 class="panel-title font">
            <b>EMI Calculator</b>
        </h2>
    </header>

    <br />

    <div id="autoLoan">

        <div class="container-fluid">
            <div class="row">
                <form class="form-horizontal" role="form" id="employee-info">

                    <div class="form-group row row_design">
                        <div class="container-fluid">
                            <div class="row">
                                <div class="form-group row row_design">
                                    <div class="form-group">
                                        <label id="" class="col-sm-4 col-sm-offset-1 control-label">Recommended Loan :</label>
                                        <div class="col-sm-2"></div>
                                        <div class="col-sm-2">
                                            <input class="form-control" data-bind="value:RecomendedLoan, valueUpdate:'keyup'" type="number">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label id="" class="col-sm-4 col-sm-offset-1 control-label">Interest Rate :</label>
                                        <div class="col-sm-2"></div>
                                        <div class="col-sm-2">
                                            <input class="form-control" data-bind="value:InterestRate, valueUpdate:'keyup'" type="number" />

                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label id="" class="col-sm-4 col-sm-offset-1 control-label">Tenor (in months) :</label>
                                        <div class="col-sm-2"></div>
                                        <div class="col-sm-2">
                                            <input class="form-control" data-bind="value:Tenor, valueUpdate:'keyup'" type="number" />

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label id="" class="col-sm-4 col-sm-offset-1 control-label"><strong>EMI for recommended loan :</strong></label>
                            <div class="col-sm-2 col-sm-offset-2">
                                <label data-bind="text: PMTRecomendedLoan" style="font-weight: bold" class="captionStatement-bold pull-right control-label"></label>
                            </div>
                            <div class="col-sm-2"></div>
                        </div>
                    </div>

                </form>
            </div>
        </div>
        <div class="form-group">
            <div id="successModal" class="modal fade" role="dialog">
                <div class="modal-dialog modal-sm">
                    <!-- Modal content-->
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h4 class="modal-title">Response</h4>
                        </div>
                        <div class="modal-body" align="center">
                            <p id="successModalText"></p>

                            <button type="button" class="btn btn-success" data-dismiss="modal">Ok</button>

                        </div>
                        <div class="modal-footer">
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>


