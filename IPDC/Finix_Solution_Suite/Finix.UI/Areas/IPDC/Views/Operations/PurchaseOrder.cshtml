@{
    ViewBag.Title = "Proposal";
    Layout = "~/Views/Shared/_LayoutjqGrid.cshtml";
}
<link href="~/Content/bootstrap-datetimepicker.css" rel="stylesheet" />
<link href="~/Areas/IPDC/Content/cif.css" rel="stylesheet" />
<script src="~/Areas/IPDC/Scripts/addressJsViewModel.js"></script>
<link href="~/Content/customassets/css/cifIncomeStatement.css" rel="stylesheet" />
<link href="~/Content/customassets/css/application.css" rel="stylesheet" />
<script src="~/Areas/IPDC/Scripts/addressJsViewModel.js"></script>
<script src="~/Scripts/bootstrap-datetimepicker.js"></script>
<script src="~/Scripts/knockout-date-bindings.js"></script>
<script src="~/Scripts/KoCustomDateTimePicker.js"></script>
<script src="~/Scripts/knockout-jqAutocomplete.min.js"></script>
<script src="~/Areas/IPDC/Scripts/Operations/purchaseOrder.js"></script>
<style>
    .form-control {
        width: 100% !important;
    }

    .input-group-addon {
        padding: 0 5px;
    }

    .no-padding {
        padding: 0;
    }

    .no-right-padding {
        padding-right: 0;
    }

    .no-left-padding {
        padding-left: 0;
    }

    .pointer {
        cursor: pointer;
    }

    .lineHeightDate {
        line-height: 15px !important;
    }

    tr > td > input {
        min-height: 22px;
    }

    input[type="number"] {
        text-align: right;
    }
</style>
<div class="panel-body" id="PurchaseOrderVW">
    <div class="container-fluid">
        <div class="panel-bodycontent">
            <header class="panel-heading bodytitle">
                <h2 class="panel-title font">
                    <b>Purchase Order</b>
                </h2>
            </header>
            <div class="panel-body collapse in">
                <fieldset>
                    <div class="col-sm-2 col-sm-offset-2">
                        <label class="control-label">Quotation Date:</label>
                    </div>
                    <div class="col-sm-3 input-group input-group_cif date" style="padding-left: 15px; padding-right: 15px;">
                        <div class="input-group">
                            <input type="text" class="form-control" id="applicationDate" data-bind="datepicker:QuotationDate, datepickerOptions: {format: 'DD/MM/YYYY'}, valueUpdate:'keyup'">
                            <span class="help-block" style="display: none;"></span>
                            <div class="input-group-addon">
                                <span class="glyphicon glyphicon-calendar"></span>
                            </div>
                        </div>
                    </div>
                    <div class="panel-bodycontent">
                        <header class="panel-heading bodytitle pointer" data-toggle="collapse" data-target="#loanRelatedInfo">
                            <h2 class="panel-title font">
                                <b>Seller Info</b>
                            </h2>
                        </header>
                        <div class="panel-body collapse in" id="loanRelatedInfo">
                            <div class="form-group row row_design_detail">
                                <div class="col-sm-2">
                                    <label class="control-label" for="SellersName">Sellers Name</label>
                                </div>
                                <div class="col-sm-2 no-padding">
                                    <input class="form-control" type="text" id="SellersName" data-bind="value:SellersName" />
                                </div>
                            </div>
                            <div class="form-group row row_design_detail">
                                <div class="col-sm-6">
                                    <div class="panel-bodycontent">
                                        <header class="panel-heading bodytitle pointer" data-toggle="collapse" data-target=".SellersAddress">
                                            <h2 class="panel-title font">
                                                <b>Permanent Address</b>
                                            </h2>
                                        </header>
                                        <div class="panel-body collapse SellersAddress" id="">
                                            <div class="row">
                                                <div class="col-sm-6">
                                                    <div class="form-group row row_design">
                                                        <div class="col-sm-3">
                                                            <label class="control-label">line 1</label>
                                                        </div>
                                                        <div class="col-sm-9">
                                                            <input type="text" data-bind="value:SellersAddress.AddressLine1" class="form-control" />
                                                        </div>
                                                    </div>
                                                    <div class="form-group row row_design">
                                                        <div class="col-sm-3">
                                                            <label class="control-label">line 2</label>
                                                        </div>
                                                        <div class="col-sm-9">
                                                            <input type="text" data-bind="value:SellersAddress.AddressLine2" class="form-control" />
                                                        </div>
                                                    </div>
                                                    <div class="form-group row row_design">
                                                        <div class="col-sm-3">
                                                            <label class="control-label">line 3</label>
                                                        </div>
                                                        <div class="col-sm-9">
                                                            <input type="text" data-bind="value:SellersAddress.AddressLine3" class="form-control" />
                                                        </div>
                                                    </div>
                                                    <div class="form-group row row_design">
                                                        <div class="col-sm-3">
                                                            <label class="control-label">Phone</label>
                                                        </div>
                                                        <div class="col-sm-9">
                                                            <input type="text" data-bind="value:SellersAddress.PhoneNo" class="form-control" />
                                                        </div>

                                                    </div>
                                                    <div class="form-group row row_design">
                                                        <div class="col-sm-3">
                                                            <label class="control-label">Mobile</label>
                                                        </div>
                                                        <div class="col-sm-9">
                                                            <input type="text" data-bind="value:SellersAddress.CellPhoneNo" class="form-control" />
                                                        </div>

                                                    </div>

                                                    <div class="form-group row row_design">
                                                        <div class="col-sm-4">
                                                            <label class="control-label">Postal Code</label>
                                                        </div>
                                                        <div class="col-sm-8">
                                                            <input type="number" data-bind="value:SellersAddress.PostalCode" class="form-control" />
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="col-sm-6">
                                                    <div class="form-group row row_design">
                                                        <div class="col-sm-3">
                                                            <label class="control-label">Country</label>
                                                        </div>
                                                        <div class="col-sm-9">
                                                            <select data-bind="options:$root.CountryList, value: SellersAddress.CountryId, optionsCaption:'Choose One..', optionsValue:'Id', optionsText: 'Name'" class="form-control"></select>
                                                        </div>
                                                    </div>

                                                    <div class="form-group row row_design">
                                                        <div class="col-sm-3">
                                                            <label class="control-label">Division</label>
                                                        </div>
                                                        <div class="col-sm-9">
                                                            <select data-bind="options:SellersAddress.DivisionList, value: SellersAddress.DivisionId, optionsCaption:'Choose One..', optionsValue:'Id', optionsText: 'DivisionNameEng'" class="form-control"></select>
                                                        </div>
                                                    </div>

                                                    <div class="form-group row row_design">
                                                        <div class="col-sm-3">
                                                            <label class="control-label">District</label>
                                                        </div>
                                                        <div class="col-sm-9">
                                                            <select data-bind="options:SellersAddress.DistrictList, value: SellersAddress.DistrictId, optionsCaption:'Choose One..', optionsValue:'Id', optionsText: 'DistrictNameEng'" class="form-control"></select>
                                                        </div>
                                                    </div>
                                                    <div class="form-group row row_design">
                                                        <div class="col-sm-3">
                                                            <label class="control-label">Thana</label>
                                                        </div>
                                                        <div class="col-sm-9">
                                                            <select data-bind="options:SellersAddress.ThanaList, value: SellersAddress.ThanaId, optionsCaption:'Choose One..', optionsValue:'Id', optionsText: 'ThanaNameEng'" class="form-control"></select>
                                                        </div>
                                                    </div>

                                                    <div class="form-group row row_design">
                                                        <div class="col-sm-3">
                                                            <label class="control-label">E-mail</label>
                                                        </div>
                                                        <div class="col-sm-9">
                                                            <input type="email" data-bind="value:SellersAddress.Email" class="form-control" />
                                                        </div>

                                                    </div>


                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="panel-bodycontent">
                        <header class="panel-heading bodytitle pointer" data-toggle="collapse" data-target="#customerInfo">
                            <h2 class="panel-title font">
                                <b>Customer Info</b>
                            </h2>
                        </header>
                        <div class="panel-body collapse in" id="customerInfo">
                            <div class="form-group row row_design_detail">
                                <div class="col-sm-2">
                                    <label class="control-label" for="CustomerName">Customer Name</label>
                                </div>
                                <div class="col-sm-2 no-padding">
                                    <input class="form-control" id="CustomerName" type="text" data-bind="value:CustomerName" />
                                </div>
                            </div>
                            <div class="form-group row row_design_detail">
                                <div class="col-sm-6">
                                    <div class="panel-bodycontent">
                                        <header class="panel-heading bodytitle pointer" data-toggle="collapse" data-target=".CustomerAddress">
                                            <h2 class="panel-title font">
                                                <b>Customer Address</b>
                                            </h2>
                                        </header>
                                        <div class="panel-body collapse CustomerAddress" id="">
                                            <div class="row">
                                                <div class="col-sm-6">
                                                    <div class="form-group row row_design">
                                                        <div class="col-sm-3">
                                                            <label class="control-label">line 1</label>
                                                        </div>
                                                        <div class="col-sm-9">
                                                            <input type="text" data-bind="value:CustomerAddress.AddressLine1" class="form-control" />
                                                        </div>
                                                    </div>
                                                    <div class="form-group row row_design">
                                                        <div class="col-sm-3">
                                                            <label class="control-label">line 2</label>
                                                        </div>
                                                        <div class="col-sm-9">
                                                            <input type="text" data-bind="value:CustomerAddress.AddressLine2" class="form-control" />
                                                        </div>
                                                    </div>
                                                    <div class="form-group row row_design">
                                                        <div class="col-sm-3">
                                                            <label class="control-label">line 3</label>
                                                        </div>
                                                        <div class="col-sm-9">
                                                            <input type="text" data-bind="value:CustomerAddress.AddressLine3" class="form-control" />
                                                        </div>
                                                    </div>
                                                    <div class="form-group row row_design">
                                                        <div class="col-sm-3">
                                                            <label class="control-label">Phone</label>
                                                        </div>
                                                        <div class="col-sm-9">
                                                            <input type="text" data-bind="value:CustomerAddress.PhoneNo" class="form-control" />
                                                        </div>

                                                    </div>
                                                    <div class="form-group row row_design">
                                                        <div class="col-sm-3">
                                                            <label class="control-label">Mobile</label>
                                                        </div>
                                                        <div class="col-sm-9">
                                                            <input type="text" data-bind="value:CustomerAddress.CellPhoneNo" class="form-control" />
                                                        </div>

                                                    </div>

                                                    <div class="form-group row row_design">
                                                        <div class="col-sm-4">
                                                            <label class="control-label">Postal Code</label>
                                                        </div>
                                                        <div class="col-sm-8">
                                                            <input type="number" data-bind="value:CustomerAddress.PostalCode" class="form-control" />
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="col-sm-6">
                                                    <div class="form-group row row_design">
                                                        <div class="col-sm-3">
                                                            <label class="control-label">Country</label>
                                                        </div>
                                                        <div class="col-sm-9">
                                                            <select data-bind="options:$root.CountryList, value: CustomerAddress.CountryId, optionsCaption:'Choose One..', optionsValue:'Id', optionsText: 'Name'" class="form-control"></select>
                                                        </div>
                                                    </div>

                                                    <div class="form-group row row_design">
                                                        <div class="col-sm-3">
                                                            <label class="control-label">Division</label>
                                                        </div>
                                                        <div class="col-sm-9">
                                                            <select data-bind="options:CustomerAddress.DivisionList, value: CustomerAddress.DivisionId, optionsCaption:'Choose One..', optionsValue:'Id', optionsText: 'DivisionNameEng'" class="form-control"></select>
                                                        </div>
                                                    </div>

                                                    <div class="form-group row row_design">
                                                        <div class="col-sm-3">
                                                            <label class="control-label">District</label>
                                                        </div>
                                                        <div class="col-sm-9">
                                                            <select data-bind="options:CustomerAddress.DistrictList, value: CustomerAddress.DistrictId, optionsCaption:'Choose One..', optionsValue:'Id', optionsText: 'DistrictNameEng'" class="form-control"></select>
                                                        </div>
                                                    </div>
                                                    <div class="form-group row row_design">
                                                        <div class="col-sm-3">
                                                            <label class="control-label">Thana</label>
                                                        </div>
                                                        <div class="col-sm-9">
                                                            <select data-bind="options:CustomerAddress.ThanaList, value: CustomerAddress.ThanaId, optionsCaption:'Choose One..', optionsValue:'Id', optionsText: 'ThanaNameEng'" class="form-control"></select>
                                                        </div>
                                                    </div>

                                                    <div class="form-group row row_design">
                                                        <div class="col-sm-3">
                                                            <label class="control-label">E-mail</label>
                                                        </div>
                                                        <div class="col-sm-9">
                                                            <input type="email" data-bind="value:CustomerAddress.Email" class="form-control" />
                                                        </div>

                                                    </div>


                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="panel-bodycontent">
                        <header class="panel-heading bodytitle pointer" data-toggle="collapse" data-target="#assetBackup">
                            <h2 class="panel-title font">
                                <b>Documents</b>
                            </h2>
                        </header>
                        <div class="panel-body collapse in" id="assetBackup">
                            <div class="form-group row row_design_detail">
                                <div>
                                    <div class="col-sm-offset-10 col-sm-2" style="text-align: center;">
                                        <a class="plus" href='#' data-bind='click: AddDocuments'>Add Documents<span class="glyphicon glyphicon-plus"></span></a>
                                    </div>
                                </div>
                                <div data-bind="foreach:Documents">
                                    <div class="col-sm-2">
                                        <label class="control-label" for="Name">Name</label>
                                    </div>
                                    <div class="col-sm-9 no-left-padding">
                                        <textarea class="form-control" id="Name" data-bind="value:Name"></textarea>
                                    </div>
                                    <div class="col-sm-1" style="text-align: center;">
                                        <a class="plus" href='#' data-bind='click: $parent.AddDocuments'><span class="glyphicon glyphicon-plus"></span></a>
                                        <a class="minus" href='#' data-bind='click: $parent.RemoveDocuments'><span class="glyphicon glyphicon-minus"></span></a>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                    <div class="panel-bodycontent">
                        <header class="panel-heading bodytitle pointer" data-toggle="collapse" data-target="#pdcEFTNDetails">
                            <h2 class="panel-title font">
                                <b>Vehicle Details</b>
                            </h2>
                        </header>
                        <div class="panel-body collapse in" id="pdcEFTNDetails">
                            <div class="form-group row row_design_detail">
                                <div class="col-sm-2">
                                    <label class="control-label" for="VehicleBrand">Brand</label>
                                </div>
                                <div class="col-sm-2 no-padding">
                                    <input class="form-control" type="text" data-bind="value:VehicleBrand" />
                                </div>
                                <div class="col-sm-2">
                                    <label class="control-label" for="ChassisNo">Chassis No</label>
                                </div>
                                <div class="col-sm-2 no-padding">
                                    <input class="form-control" type="text" data-bind="value:ChassisNo" />
                                </div>
                                <div class="col-sm-2">
                                    <label class="control-label" for="EngineNo">Engine No</label>
                                </div>
                                <div class="col-sm-2 no-padding">
                                    <input class="form-control" type="text" data-bind="value:EngineNo" />
                                </div>
                            </div>
                            <div class="form-group row row_design_detail">
                                <div class="col-sm-2">
                                    <label class="control-label" for="ManufacturingYear">Manufacturing Year</label>
                                </div>
                                <div class="col-sm-2 no-padding">
                                    <input class="form-control" type="text" data-bind="value:ManufacturingYear" />
                                </div>
                                <div class="col-sm-2">
                                    <label class="control-label" for="CC">CC</label>
                                </div>
                                <div class="col-sm-2 no-padding">
                                    <input class="form-control" type="text" data-bind="value:CC" />
                                </div>
                                <div class="col-sm-2">
                                    <label class="control-label" for="Colour">Colour</label>
                                </div>
                                <div class="col-sm-2 no-padding">
                                    <input class="form-control" type="text" data-bind="value:Colour" />
                                </div>

                            </div>
                            <div class="form-group row row_design_detail">
                                <div class="col-sm-2">
                                    <label class="control-label" for="Valitity">Validity</label>
                                </div>
                                <div class="col-sm-2 no-padding">
                                    <input class="form-control" type="number" data-bind="value:Valitity" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group row row_design">
                        
                        <div class="col-sm-4 pull-right">
                            <button type="button" class="btn btn-success" data-bind="click:SavePO">Save</button>
                            <button type="button" class="btn-q btn-success" data-bind="click:SavePrint">Save & Print</button>
                        </div>
                    </div>
                </fieldset>
            </div>
        </div>
    </div>
    <div id="successModal" class="modal fade" role="dialog">
        <div class="modal-dialog modal-sm">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Response</h4>
                </div>
                <div class="modal-body" align="center">
                    <p id="successModalText"></p>
                    <button type="button" class="btn btn-success" data-dismiss="modal">Ok</button>
                </div>
                <div class="modal-footer">
                </div>
            </div>
        </div>
    </div>
</div>