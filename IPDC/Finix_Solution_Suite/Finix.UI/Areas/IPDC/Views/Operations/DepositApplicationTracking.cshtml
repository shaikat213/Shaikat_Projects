<script src="~/Scripts/jquery-ui-1.11.4.min.js"></script>
<script src="~/Scripts/moment.js"></script>
<script src="~/Areas/IPDC/Scripts/addressJsViewModel.js"></script>
<script src="~/Areas/IPDC/Scripts/Operations/DepositAppTracking.js"></script>
<link href="~/Content/customassets/css/officeDesignationArea.css" rel="stylesheet" />
<link href="~/Areas/IPDC/Content/cif.css" rel="stylesheet" />

<link href="~/Content/customassets/css/cifIncomeStatement.css" rel="stylesheet" />
<link href="~/Content/customassets/css/application.css" rel="stylesheet" />

<link href="~/Content/bootstrap-datetimepicker.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap-datetimepicker.js"></script>
<script src="~/Scripts/knockout-date-bindings.js"></script>
<script src="~/Scripts/KoCustomDateTimePicker.js"></script>
@{
    ViewBag.Title = "CIF Oraganizational";
    Layout = "~/Views/Shared/_LayoutjqGrid.cshtml";
}
<style>
    .form-control {
        width: 100% !important;
    }

    .input-group-addon {
        padding: 0 5px;
    }

    .no-padding {
        padding: 0;
    }
</style>
<div id="depositAppTracking">
    <section class="panel-bodycontent">
        <header class="panel-heading bodytitle">
            <h2 class="panel-title font"><b>Deposit Application Tracking</b></h2>
        </header>
        <section>
            <div class="container-fluid ">
                <div class="col-sm-12">
                    <form class="form-horizontal" role="form">
                        <div class="col-sm-12">
                            <div class="form-group row row_design">
                                <div class="col-sm-4"></div>
                                <div class="form-group row row_design_cifr">
                                    <div class="col-sm-4" style="padding-left: 0px; text-align:center">
                                        <label class="heading">Opended Deposit Application Info</label>
                                    </div>
                                </div>
                                <div class="col-sm-4"></div>
                            </div>
                            <div class="col-sm-6">

                                <!--<fieldset>-->
                                <div class="ds-content">
                                    <div class="row">

                                        <div class="form-group row row_design">

                                            <div class="col-sm-6">
                                                <label class="control-label">Account No.</label>
                                            </div>
                                            <div class="col-sm-6">
                                                <div id="divTxtOffice1">
                                                    <input type="text" data-bind="value: ApplicationNo" class="form-control"  readonly="readonly"/>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group row row_design">

                                            <div class="col-sm-6">
                                                <label class="control-label">Account Title</label>
                                            </div>
                                            <div class="col-sm-6">
                                                <div id="">
                                                    <input type="text" data-bind="value: AccountTitle" class="form-control"  readonly="readonly"/>
                                                </div>
                                            </div>

                                        </div>
                                        <div class="form-group row row_design">
                                            <div class="col-sm-6">
                                                <label class="control-label">Amount</label>
                                            </div>
                                            <div class="col-sm-6">
                                                <input type="number" data-bind="value:MaturityAmount, valueUpdate:'keyup'" class="form-control hidden"/>
                                                <input type="text" data-bind="value:MaturityAmountFormatted" class="form-control" readonly="readonly" />
                                            </div>
                                        </div>

                                        <div class="form-group row row_design">
                                            <div class="col-sm-6">
                                                <label class="control-label">Instrument Delivery Status</label>
                                            </div>
                                            <div class="col-sm-6">
                                                <select id="LegalStatus" data-bind="options:InstrumentDeliveryStatusList, value: InstrumentDeliveryStatus, optionsValue: 'Id', optionsText:'Name',optionsCaption:'--Select--'" class="form-control"></select>
                                            </div>
                                        </div>

                                        <div class="form-group row row_design">
                                            <div class="col-sm-6">
                                                <label class="control-label">Change Date</label>
                                            </div>
                                            @*<div class="col-sm-6 input-group input-group_cif date">
                                                <input type="date" data-bind="text:moment(ChangeDate).format('DD/MM/YYYY')" class="form-control"/>
                                                <span class="help-block" style="display: none;"></span>
                                                <span class="input-group-addon">
                                                    <span class="glyphicon glyphicon-calendar"></span>
                                                </span>
                                            </div>*@
                                            <div class="col-sm-6" style="padding-left: 15px; padding-right: 15px;" data-bind="validationElement: ChangeDate">
                                                <div class="input-group">
                                                    <input type="text" class="form-control" data-bind="datepicker:ChangeDate, datepickerOptions: {format: 'DD/MM/YYYY'}, valueUpdate:'keyup'">
                                                    <span class="help-block" style="display: none;"></span>
                                                    <div class="input-group-addon">
                                                        <span class="glyphicon glyphicon-calendar"></span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="form-group row row_design">
                                            <div class="col-sm-6">
                                                <label class="control-label">Welcome Letter Status</label>
                                            </div>
                                            <div class="col-sm-6">
                                                <select data-bind="options:WelcomeLetterStatusList, value: WelcomeLetterStatus, optionsValue: 'Id', optionsText:'Name',optionsCaption:'--Select--'" class="form-control"></select>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!--</fieldset>-->

                            </div>
                            
                        </div>
                        
                        <div class="col-sm-12">
                            <div class="form-group row row_design">
                                <div class="col-sm-6">
                                </div>

                                <div class="col-sm-6" style="text-align:right">
                                    <button type="submit" data-bind="click:SaveDepositAppTracking" class="btn btn-success">Save</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </section>
        <div>
            <div id="successModal" class="modal fade" role="dialog">
                <div class="modal-dialog modal-sm">
                    <!-- Modal content-->
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h4 class="modal-title">Response</h4>
                        </div>
                        <div class="modal-body" align="center">
                            <p id="successModalText"></p>
                            <button type="button" class="btn btn-success" data-dismiss="modal">Ok</button>
                        </div>
                        <div class="modal-footer">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

