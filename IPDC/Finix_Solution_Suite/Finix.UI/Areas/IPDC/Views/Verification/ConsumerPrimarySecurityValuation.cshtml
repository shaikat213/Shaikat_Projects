
@{
    ViewBag.Title = "ConsumerPrimarySecurityValuation";
    Layout = "~/Views/Shared/_LayoutjqGrid.cshtml";
}

<link href="~/Content/bootstrap-datetimepicker.css" rel="stylesheet"/>
<script src="~/Scripts/bootstrap-datetimepicker.js"></script>
<link href="~/Content/customassets/css/CPV.css" rel="stylesheet" />

<link href="~/Content/customassets/css/officeDesignationArea.css" rel="stylesheet" />
<link href="~/Areas/IPDC/Content/cif.css" rel="stylesheet" />

<link href="~/Content/customassets/css/cifIncomeStatement.css" rel="stylesheet" />
<link href="~/Content/customassets/css/application.css" rel="stylesheet" />
<link href="~/Areas/IPDC/Content/CIB.css" rel="stylesheet" />
<script src="~/Areas/IPDC/Scripts/Verification/consumerPrimarySecurityValuation.js"></script>
<style>
    .form-control {
        width: 100% !important;
    }

    .input-group-addon {
        padding: 0 5px;
    }
</style>

<section class="panel-bodycontent">
    <header class="panel-heading bodytitle">
        <h2 class="panel-title font">
            <b>Consumer Goods Primary Security Valuation</b>
        </h2>
    </header>
    <div class="container">
        <div class="row">

            <section class="rm">
                <div class="panel-body">

                    <form class="form-horizontal" role="form">
                        <div class="form-group row row_design">


                            <div class="col-sm-2 col-sm-offset-2">
                                <label for="ApplicationNo" class="control-label" style="text-align: left;">Application No :</label>
                            </div>
                            <div class="col-sm-3">
                                <input type="text" data-bind="value:ApplicationNo" id="ApplicationNo" class="form-control" />
                            </div>
                        </div><br />

                        <div class="panel-heading row_design_cifNetworth">
                            <label>CIF List</label>
                        </div>

                        <div class="panel-body">
                            <table class="table table-striped table-bordered">
                                <thead class="headcolor">
                                    <tr>
                                        <th class="col-sm-4">CIF No.</th>
                                        <th class="col-sm-3">Name</th>
                                        <th class="col-sm-3">Applicant Role</th>
                                        
                                    </tr>
                                </thead>
                                <tbody data-bind="foreach:CIFList">
                                    <tr>
                                        <td><span data-bind="text:CIFNo"></span></td>
                                        <td><span data-bind="text:ApplicantName"></span></td>
                                        <td><span data-bind="text:ApplicantRoleName"></span></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <div>
                            <div class="form-group row row_design">
                                <div class="col-sm-1"></div>
                                <div class="col-sm-2">
                                    <label for="Item" class="control-label">Item</label>
                                </div>
                                <div class="col-sm-3" data-bind="validationElement: Item">
                                    <input type="text" data-bind="value:Item" class="form-control" id="Item" placeholder="Item">
                                </div>
                                <div class="col-sm-2">
                                    <label for="Brand" class="control-label">Brand</label>
                                </div>
                                <div class="col-sm-3" data-bind="validationElement: Brand">
                                    <input type="text" data-bind="value:Brand" class="form-control" id="Brand" placeholder="Brand">
                                </div>
                                <div class="col-sm-1"></div>
                            </div>
                                
                            <div class="form-group row row_design" data-bind="visible:IsVendor"> 
                                <div class="col-sm-1"></div>
                                <div class="col-sm-2">
                                    <label for="VendorName" class="control-label">Vendor<span class="required">*</span></label>
                                </div>
                                <div class="col-sm-3" data-bind="validationElement: VendorName">
                                    @*<select class="form-control loan" id="ConsumerVendorId" data-bind="options:Vendors,optionsValue: 'Id',optionsText:'Name',optionsCaption:'--Select--', value:VendorId , event: {change : GetShowRooms}"></select>*@
                                    <input type="text" data-bind="value:VendorName" class="form-control" id="VendorName" placeholder="Vendor Name">
                                </div>

                                <div class="col-sm-2">
                                    <label for="ShowRoomName" class="control-label">Show Room<span class="required">*</span></label>
                                </div>
                                <div class="col-sm-3" data-bind="validationElement: ShowRoomName">
                                    @*<select class="form-control loan" id="ShowRoomId" data-bind="options:ShowRooms,optionsValue: 'Id',optionsText:'Name',optionsCaption:'--Select--', value:ShowRoomId "></select>*@
                                    <input type="text" data-bind="value:ShowRoomName" class="form-control" id="ShowRoomName" placeholder="ShowRoom Name">
                                </div>
                                <div class="col-sm-1"></div>
                            </div>

                            <div data-bind="visible: IsSeller">
                                <div class="form-group row row_design">
                                    <div class="col-sm-1"></div>
                                    <div class="col-sm-2">
                                        <label for="Dealer" class="control-label">Dealer</label>
                                    </div>
                                    <div class="col-sm-3" data-bind="validationElement: Dealer">
                                        <input type="text" data-bind="value:Dealer" class="form-control" id="Dealer" placeholder="Dealer">
                                    </div>
                                    <div class="col-sm-6"></div>
                                </div>
                                <div class="form-group row row_design">
                                    <div class="col-sm-1"></div>
                                    <div class="col-sm-2">
                                        <label class="control-label"><b>Dealer Address:</b></label>
                                    </div>
                                    <div class="col-sm-9"></div>
                                </div>
                                <div class="form-group row row_design">
                                    <div class="col-sm-1"></div>
                                    <div class="col-sm-2">
                                        <label class="control-label">Address line 1</label>
                                    </div>
                                    <div class="col-sm-3">
                                        <input type="text" data-bind="value:DealerAddress.AddressLine1" class="form-control" readonly />
                                    </div>
                                    <div class="col-sm-2">
                                        <label class="control-label">Address line 2</label>
                                    </div>
                                    <div class="col-sm-3">
                                        <input type="text" data-bind="value:DealerAddress.AddressLine2" class="form-control" readonly />
                                    </div>

                                </div>
                                <div class="form-group row row_design">
                                    <div class="col-sm-1"></div>
                                    <div class="col-sm-2">
                                        <label class="control-label">Address line 3</label>
                                    </div>
                                    <div class="col-sm-3">
                                        <input type="text" data-bind="value:DealerAddress.AddressLine3" class="form-control" readonly />
                                    </div>
                                    <div class="col-sm-2">
                                        <label class="control-label">Country</label>
                                    </div>
                                    <div class="col-sm-3">
                                        <select data-bind="options: CountryIdList, value: DealerAddress.CountryId, optionsCaption:'Choose One..', optionsValue:'Id', optionsText: 'Name'" class="form-control" disabled=""></select>
                                    </div>

                                </div>
                                <div class="form-group row row_design">
                                    <div class="col-sm-1"></div>
                                    <div class="col-sm-2">
                                        <label class="control-label">Division</label>
                                    </div>
                                    <div class="col-sm-3">
                                        <select data-bind="options: DealerAddress.DivisionList, value: DealerAddress.DivisionId, optionsCaption:'Choose One..', optionsValue:'Id', optionsText: 'DivisionNameEng'" class="form-control" disabled=""></select>
                                    </div>
                                    <div class="col-sm-2">
                                        <label class="control-label">District</label>
                                    </div>
                                    <div class="col-sm-3">
                                        <select data-bind="options: DealerAddress.DistrictList, value: DealerAddress.DistrictId, optionsCaption:'Choose One..', optionsValue:'Id', optionsText: 'DistrictNameEng'" class="form-control" disabled=""></select>
                                    </div>
                                </div>
                                <div class="form-group row row_design">
                                    <div class="col-sm-1"></div>
                                    <div class="col-sm-2">
                                        <label class="control-label">Thana</label>
                                    </div>
                                    <div class="col-sm-3">
                                        <select data-bind="options: DealerAddress.ThanaList, value: DealerAddress.ThanaId, optionsCaption:'Choose One..', optionsValue:'Id', optionsText: 'ThanaNameEng'" class="form-control" disabled=""></select>
                                    </div>
                                    <div class="col-sm-2">
                                        <label class="control-label">Postal Code</label>
                                    </div>
                                    <div class="col-sm-3">
                                        <input type="text" data-bind="value:DealerAddress.PostalCode" class="form-control" readonly />
                                    </div>
                                </div>
                                <div class="form-group row row_design">
                                    <div class="col-sm-1"></div>
                                    <div class="col-sm-2">
                                        <label class="control-label">Phone</label>
                                    </div>
                                    <div class="col-sm-3">
                                        <input type="text" data-bind="value:DealerAddress.PhoneNo" class="form-control" readonly />
                                    </div>
                                    <div class="col-sm-2">
                                        <label class="control-label">Cell Phone</label>
                                    </div>
                                    <div class="col-sm-3">
                                        <input type="text" data-bind="value:DealerAddress.CellPhoneNo" class="form-control" readonly />
                                    </div>
                                </div>
                            </div>
                            <div class="form-group row row_design">
                                <div class="col-sm-1"></div>
                                <div class="col-sm-2">
                                    <label for="Price" class="control-label">Price</label>
                                </div>
                                <div class="col-sm-3" data-bind="validationElement: Price">
                                    <input type="number" data-bind="value:Price" class="form-control" id="Price" placeholder="Price">
                                </div>
                                <div class="col-sm-6"></div>
                            </div>
                        </div>
                    </form>
                </div>
            </section>

        </div>
    </div><br />



    <!--start APPLICATION DETAILS-->

    <div class="panel panel-default">

        <div class="panel-heading">
            <label class="headingOcc">Verification</label>
        </div>
        <div class="panel-body">

            <form class="form-horizontal" role="form">
                <div class="form-group row row_design_detail">

                    <div class="col-sm-2 col-sm-offset-2">
                        <label class="control-label">Verification Date :</label>
                    </div>
                    <div class="col-sm-3 input-group input-group_cif date" style="padding-left:15px; padding-right:15px; padding-bottom: 2px;">

                        <input data-bind="value:VerificationDateText" id="VarificationDateId" class="form-control" type="text">
                        <div class="input-group-addon">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group row row_design">

                    <div class="col-sm-2 col-sm-offset-2">
                        <label for="VerifiedPrice" class="control-label" style="text-align: left;">Verified Price :</label>
                    </div>
                    <div class="col-sm-3">
                        <input type="number" data-bind="value:VerifiedPrice" id="VerifiedPrice" class="form-control" />
                    </div>

                </div>

                <div class="form-group row row_design">

                    <div class="col-sm-2 col-sm-offset-2">
                        <label for="VerificationMethod" class="control-label" style="text-align: left;">Verification Method :</label>
                    </div>
                    <div class="col-sm-3">

                        <input type="text" data-bind="value:VerificationMethod" id="VerificationMethod" class="form-control" />
                    </div>

                </div>

                <div class="form-group row row_design">

                    <div class="col-sm-2 col-sm-offset-2">
                        <label for="Remarks" class="control-label" style="text-align: left;">Comment :</label>
                    </div>
                    <div class="col-sm-3">

                        <textarea type="text" data-bind="value:Remarks" id="Remarks" class="form-control"></textarea>
                    </div>

                </div>

                <div class="form-group row row_design">

                    <div class="col-sm-2 col-sm-offset-2">
                        <label class="control-label" style="text-align: left;">Verification Status :</label>
                    </div>
                    <div class="col-sm-3">
                        <select class="form-control" data-bind="options:VerificationStates,optionsValue: 'Id',optionsText:'Name',optionsCaption:'--Select--', value:VerificationState"></select>

                    </div>

                </div>
                <div class="form-group row row_design">
                    
                    <div class="col-sm-2 col-sm-offset-6">
                        <button type="button" class="btn btn-default" data-bind="click:SubmitNew">Create</button>
                        <button type="button" class="btn btn-success" data-bind="click:Submit">Edit</button>

                    </div>
                </div>
                <div id="lonSuccessModal" class="modal fade" role="dialog">
                    <div class="modal-dialog modal-sm">
                        <!-- Modal content-->
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                <h4 class="modal-title">Response</h4>
                        </div>
                            <div class="modal-body" align="center">
                                <p id="lonSuccessModalText"></p>

                                <button type="button" class="btn btn-success" data-dismiss="modal">Ok</button>

                           </div>
                            <div class="modal-footer">
                            </div>
                        </div>

                    </div>
                </div>
            </form>

        </div>

    </div>



</section>





