
@{
    ViewBag.Title = "CIBOrganizational";
    Layout = "~/Views/Shared/_LayoutjqGrid.cshtml";
}


<link href="~/Content/bootstrap-datetimepicker.css" rel="stylesheet" />
<link href="~/Content/customassets/css/CPV.css" rel="stylesheet" />

<link href="~/Content/customassets/css/officeDesignationArea.css" rel="stylesheet" />
<link href="~/Areas/IPDC/Content/cif.css" rel="stylesheet" />
<script src="~/Areas/IPDC/Scripts/Verification/CIB_Organizational.js"></script>
<link href="~/Content/customassets/css/cifIncomeStatement.css" rel="stylesheet" />
<link href="~/Content/customassets/css/application.css" rel="stylesheet" />
<link href="~/Areas/IPDC/Content/CIB.css" rel="stylesheet" />

<style>
    .form-control {
        width: 100% !important;
    }

    .btnLarge {
        width: 140px !important;
    }

    .input-group-addon {
        padding: 0 5px;
    }
</style>

<section class="panel-bodycontent" id="ciborganizational">
    <header class="panel-heading bodytitle">
        <h2 class="panel-title font">
            <b>CIB Organizational</b>
        </h2>
    </header>

    <br />

    <div>
        <div class="form-group row row_design_detail">

            <div class="col-sm-2 col-sm-offset-2">
                <label for="ContactAddress" class="control-label" style="text-align: left;">Company Verified :</label>
            </div>
            <div class="col-sm-2">
                <label class="radio-inline"><input type="radio" value="1" data-bind="checked: VerificationPersonRole">Applicant</label>
            </div>
            <div class="col-sm-2">
                <label class="radio-inline"><input type="radio" value="2" data-bind="checked: VerificationPersonRole">Co-Applicant</label>
            </div>
            <div class="col-sm-2">
                <label class="radio-inline"><input type="radio" value="3" data-bind="checked: VerificationPersonRole">Guarantor</label>
            </div>

        </div>

        <div class="container">
            <div class="row">

                <section class="rm">
                    <div class="panel-body">

                        <div class="container-fluid ">

                            <fieldset>
                                <div class="row">
                                    <div class="col-sm-12">
                                       
                                            <div class="form-group row row_design">

                                                <div class="col-sm-3">
                                                    <label for="ContactAddress" class="control-label" style="text-align: left;">CIF Org. No. :</label>
                                                </div>
                                                <div class="col-sm-2">
                                                    <strong><span data-bind="text:CifOrgNo"></span></strong>
                                                </div>

                                                <div class="col-sm-2">
                                                    <label for="ContactAddress" class="control-label" style="text-align: left;">Org. Name :</label>
                                                </div>
                                                <div class="col-sm-2">
                                                    <strong><span data-bind="text:CifOrgName"></span></strong>
                                                </div>
                                                <div class="col-sm-3">
                                                    <button type="submit" class="btn-q btn-default btnLarge">Verification History</button>
                                                </div>
                                            </div>
                                       

                                        <br />

                                        <div class="form-group row row_design">

                                            <div class="col-sm-6 col-sm-offset-4">

                                                <button type="button" class="btn-q btn-success">Record New</button>

                                                <button type="button" class="btn-q btn-success">Re-Entry</button>

                                                <button type="button" class="btn-q btn-success">Not Required</button>
                                            </div>


                                        </div>

                                    </div>
                                </div>
                            </fieldset>
                        </div>
                    </div>
                </section>
                <br />
                <div class="form-group row row_design_detail">
                    <div class="col-sm-3 col-sm-offset-2">
                        <label class="control-label">Verification Date :</label>
                    </div>
                    <div class="col-sm-3 input-group input-group_cif date" style="padding-left: 15px; padding-right: 15px;">

                        <input type="date" data-bind="date: VerificationDate" class="form-control lignHeightDate" />
                        
                        <div class="input-group-addon">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <br />
        <!--start APPLICATION DETAILS-->

        <div class="panel panel-default">

            <div class="panel-heading">
                <label class="headingOcc col-sm-offset-1">New/Re-Entry</label>
            </div>
            <div class="panel-body">

                <form class="form-horizontal" role="form">
                    <div class="form-group row row_design">

                        <div class="col-sm-4 col-sm-offset-2">
                            <label for="ContactAddress" class="control-label" style="text-align: left;">No of Living Contracts as Borrower-Co Borrower :</label>
                        </div>
                        <div class="col-sm-3">
                            <input type="number" min="0" data-bind="value:NoOfLivingContactsAsBorrower, valueUpdate:'keyup'" class="form-control" />
                        </div>

                    </div>

                    <div class="form-group row row_design">

                        <div class="col-sm-4 col-sm-offset-2">
                            <label for="ContactAddress" class="control-label" style="text-align: left;">Total Outstanding as Borrower- Co Borrower :</label>
                        </div>
                        <div class="col-sm-3">

                            <input type="number" min="0" data-bind="value:TotalOutstandingAsBorrower, valueUpdate:'keyup'" class="form-control" />
                        </div>

                    </div>

                    <div class="form-group row row_design">

                        <div class="col-sm-4 col-sm-offset-2">
                            <label for="ContactAddress" class="control-label" style="text-align: left;">Classified Amount as Borrower-Co Borrower :</label>
                        </div>
                        <div class="col-sm-3">

                            <input type="number" min="0" data-bind="value:ClassifiedAmountAsBorrower, valueUpdate:'keyup'" class="form-control" />
                        </div>

                    </div>

                    <div class="form-group row row_design">

                        <div class="col-sm-4 col-sm-offset-2">
                            <label for="ContactAddress" class="control-label" style="text-align: left;">Total EMI as Borrower-Co Borrower :</label>
                        </div>
                        <div class="col-sm-3">

                            <input type="number" min="0" data-bind="value:TotalEMIAsBorrower, valueUpdate:'keyup'" class="form-control" />
                        </div>

                    </div>

                    <div class="form-group row row_design">

                        <div class="col-sm-4 col-sm-offset-2">
                            <label for="ContactAddress" class="control-label" style="text-align: left;">Classification Status as Borrower-Co Borrower :</label>
                        </div>
                        <div class="col-sm-3">

                            <select id="BirthCountryId" data-bind="options:CIBClassificationStatusAsBorrowerList, optionsValue: 'Id',optionsText:'Name',optionsCaption:'--Select--', value:CIBClassificationStatusAsBorrower" class="form-control"></select>
                        </div>

                    </div>

                    <div class="form-group row row_design">

                        <div class="col-sm-4 col-sm-offset-2">
                            <label for="ContactAddress" class="control-label" style="text-align: left;">No of Living Contracts as Guarantor :</label>
                        </div>
                        <div class="col-sm-3">

                            <input type="number" min="0" data-bind="value:NoOfLivingContactsAsGuarantor, valueUpdate:'keyup'" class="form-control" />
                        </div>

                    </div>

                    <div class="form-group row row_design">

                        <div class="col-sm-4 col-sm-offset-2">
                            <label for="ContactAddress" class="control-label" style="text-align: left;">Total Outstanding as Guarantor :</label>
                        </div>
                        <div class="col-sm-3">

                            <input type="number" min="0" data-bind="value:TotalOutstandingAsGuarantor, valueUpdate:'keyup'" class="form-control" />
                        </div>

                    </div>

                    <div class="form-group row row_design">

                        <div class="col-sm-4 col-sm-offset-2">
                            <label for="ContactAddress" class="control-label" style="text-align: left;">Classified Amount as Guarantor :</label>
                        </div>
                        <div class="col-sm-3">

                            <input type="number" min="0" data-bind="value:ClassifiedAmountAsGuarantor, valueUpdate:'keyup'" class="form-control" />
                        </div>

                    </div>

                    <div class="form-group row row_design">

                        <div class="col-sm-4 col-sm-offset-2">
                            <label for="ContactAddress" class="control-label" style="text-align: left;">Total EMI as Guarantor :</label>
                        </div>
                        <div class="col-sm-3">

                            <input type="number" min="0" data-bind="value:TotalEMIAsGuarantor, valueUpdate:'keyup'" class="form-control" />
                        </div>

                    </div>

                    <div class="form-group row row_design">

                        <div class="col-sm-4 col-sm-offset-2">
                            <label for="ContactAddress" class="control-label" style="text-align: left;">Classification Status as Guarantor :</label>
                        </div>
                        <div class="col-sm-3">

                            <select id="BirthCountryId" data-bind="options:CIBClassificationStatusAsGuarantorList, optionsValue: 'Id',optionsText:'Name',optionsCaption:'--Select--', value:CIBClassificationStatusAsGuarantor" class="form-control"></select>
                        </div>

                    </div>


                    <div class="form-group row row_design">

                        <div class="col-sm-4 col-sm-offset-2">
                            <label for="ContactAddress" class="control-label" style="text-align: left;">Classification Status of Directors Loan :</label>
                        </div>
                        <div class="col-sm-3">

                            <select id="BirthCountryId" data-bind="options:CIBClassificationStatusOfDirectorsList, optionsValue: 'Id',optionsText:'Name',optionsCaption:'--Select--', value:CIBClassificationStatusOfDirectors" class="form-control"></select>
                        </div>

                    </div>

                    <div class="form-group row row_design">

                        <div class="col-sm-4 col-sm-offset-2">
                            <label for="ContactAddress" class="control-label" style="text-align: left;">Classification Status of Directors Concered Loan :</label>
                        </div>
                        <div class="col-sm-3">

                            <select id="BirthCountryId" data-bind="options:CIBClassificationStatusOfDirectorsConcernList, optionsValue: 'Id',optionsText:'Name',optionsCaption:'--Select--', value:CIBClassificationStatusOfDirectorsConcern" class="form-control"></select>
                        </div>

                    </div>

                    <div class="form-group row row_design">

                        <div class="col-sm-4 col-sm-offset-2">
                            <label for="ContactAddress" class="control-label" style="text-align: left;">Upload CIB Report :</label>
                        </div>
                        <div class="col-sm-3">

                            <input type="file" class="form-control" />
                        </div>

                    </div>

                    <div class="form-group row row_design">

                        <div class="col-sm-1 col-sm-offset-8">
                            <button type="button" class="btn btn-success" data-bind="click:SaveCIBOrganizational ">Save</button> @*, enable :IsValid*@
                        </div>
                       
                    </div>
                    <div class="form-group">
                        <div id="cibSuccessModal" class="modal fade" role="dialog">
                            <div class="modal-dialog modal-sm">
                                <!-- Modal content-->
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                                        <h4 class="modal-title">Response</h4>
                                    </div>
                                    <div class="modal-body" align="center">
                                        <p id="cibSuccessModalText"></p>

                                        <button type="button" class="btn btn-success" data-dismiss="modal">Ok</button>

                                    </div>
                                    <div class="modal-footer">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </form>

            </div>

        </div>

    </div>

</section>







