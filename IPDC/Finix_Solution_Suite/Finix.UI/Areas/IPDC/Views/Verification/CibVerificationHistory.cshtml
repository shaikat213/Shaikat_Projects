    </header>

    <br />

    <div class="container">
        <div class="row">

            <section class="rm">
                <div class="panel-body">

                    <div class="container-fluid ">

                        <fieldset>
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="form-group row row_design">
                                        <div class="col-sm-6">
                                            <label for="ContactAddress" class="control-label" style="text-align: left;">CIF No :</label>
                                        </div>
                                        <div class="col-sm-6">
                                            <span type="text" data-bind="text:CifNo"></span>
                                        </div>

                                    </div>

                                    <div class="form-group row row_design">
                                        <div class="col-sm-6">
                                            <label for="ContactAddress" class="control-label" style="text-align: left;">Name :</label>
                                        </div>
                                        <div class="col-sm-6">
                                            <span type="text" data-bind="text:CIFName"></span>
                                        </div>

                                    </div>


                                </div>
                            </div>

