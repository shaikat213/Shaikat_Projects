
@{
    ViewBag.Title = "VisitReport";
    Layout = "~/Views/Shared/_LayoutjqGrid.cshtml";
}

<link href="~/Content/bootstrap-datetimepicker.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap-datetimepicker.js"></script>
<link href="~/Content/customassets/css/CPV.css" rel="stylesheet" />

<link href="~/Content/customassets/css/officeDesignationArea.css" rel="stylesheet" />
<link href="~/Areas/IPDC/Content/cif.css" rel="stylesheet" />
<script src="~/Areas/IPDC/Scripts/addressJsViewModel.js"></script>
<link href="~/Content/customassets/css/cifIncomeStatement.css" rel="stylesheet" />
<link href="~/Content/customassets/css/application.css" rel="stylesheet" />
<link href="~/Areas/IPDC/Content/CIB.css" rel="stylesheet" />
<script src="~/Areas/IPDC/Scripts/Verification/vsitReport.js"></script>
<style>
    .form-control {
        width: 100% !important;
    }

    .input-group-addon {
        padding: 0 5px;
    }

    .col-sm-4 {
        width: 39.33333333% !important;
    }
</style>


<section class="panel-bodycontent">
    <header class="panel-heading bodytitle">
        <h2 class="panel-title font">
            <b>Visit Report</b>
        </h2>
    </header>

    <br />

    <div id="VisitReportVw" class="form-horizontal" enctype="multipart/form-data">
        <div class="form-group row row_design_detail">

            <div class="col-sm-2 col-sm-offset-2">
                <label for="" class="control-label" style="text-align: left;">Person Verified :</label>
            </div>
            <div class="col-sm-2">
                <label class="radio-inline"><input type="radio" value="1" data-bind="checked: VerificationPersonRole" disabled>Applicant</label>
            </div>
            <div class="col-sm-2">
                <label class="radio-inline"><input type="radio" value="2" data-bind="checked: VerificationPersonRole" disabled>Co-Applicant</label>
            </div>
            <div class="col-sm-2">
                <label class="radio-inline"><input type="radio" value="3" data-bind="checked: VerificationPersonRole" disabled>Guarantor</label>
            </div>

        </div>


        <section class="rm">
            <div class="panel-body">
                <div class="container-fluid ">
                    <fieldset>
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="form-group row row_design">
                                    <div class="col-sm-2 col-sm-offset-1">
                                        <label for="ContactAddress" class="control-label" style="text-align: left;">CIF No:</label>
                                    </div>
                                    <div class="col-sm-2">
                                        <span data-bind="text:CIFNo"></span>
                                    </div>

                                    <div class="col-sm-2">
                                        <label class="control-label" style="text-align: left;">CIF Name:</label>
                                    </div>
                                    <div class="col-sm-5">
                                        <span data-bind="text:CIFName"></span>
                                    </div>
                                </div>
                                <div class="form-group row row_design_detail">
                                    <div class="col-sm-2 pull-right">
                                        <button type="submit" class="btn-q btn-default" data-bind="click:VisitHistory">History</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </fieldset>
                </div>
            </div>
        </section>


        <hr class="horizontal">
        <div class="row">
            <div class="col-sm-12">



                <div class="form-group row row_design_detail">

                    <div class="col-sm-3 col-sm-offset-2">
                        <label for="CompanyName" class="control-label" style="text-align: left;">Company Name :</label>
                    </div>
                    <div class="col-sm-3">
                        <input type="text" class="form-control" id="CompanyName" data-bind="value:CompanyName" />
                    </div>

                </div>


                <div class="form-group row row_design">
                    <div class="col-sm-3 col-sm-offset-2">
                        <label class="control-label">Nature of Business :</label>
                    </div>
                    <div class="col-sm-3">
                        @*<select class="form-control app" id="ContactPersonId" data-bind="options:ContactPersonList,optionsValue: 'Id',optionsText:'Name',optionsCaption:'--Select--', value:ContactPersonId"></select>*@
                        <input type="text" class="form-control" id="NatureOfBusiness" data-bind="value:NatureOfBusiness" />
                    </div>
                </div>
                <div class="form-group row row_design">

                    <div class="col-sm-3 col-sm-offset-2">
                        <label class="control-label">Company Legal Status :</label>
                    </div>
                    <div class="col-sm-3">
                        <select class="form-control app" id="TypeOfOrg" data-bind="options:LegalStatuses,optionsValue: 'Id',optionsText:'Name',optionsCaption:'--Select--', value:TypeOfOrg"></select>

                    </div>
                </div>


                <div class="form-group row row_design">
                    <div class="col-sm-4">

                    </div>
                    <div class="form-group row row_design">
                        <div class="col-sm-3" style="text-align:center">
                            <label>Registered Address</label>
                        </div>
                    </div>
                    <div class="col-sm-4">

                    </div>
                </div>

                <div class="form-group row row_design">

                    <div class="col-sm-3 col-sm-offset-2">
                        <label class="control-label">Address line 1 :</label>
                    </div>
                    <div class="col-sm-3">
                        <input type="text" data-bind="value:OfficeAddress.AddressLine1" class="form-control" />
                    </div>
                    <div class="col-sm-1">

                    </div>

                </div>

                <div class="form-group row row_design">

                    <div class="col-sm-3 col-sm-offset-2">
                        <label class="control-label">Address line 2 :</label>
                    </div>
                    <div class="col-sm-3">
                        <input type="text" data-bind="value:OfficeAddress.AddressLine2" class="form-control" />
                    </div>
                    <div class="col-sm-1">

                    </div>

                </div>
                <div class="form-group row row_design">

                    <div class="col-sm-3 col-sm-offset-2">
                        <label class="control-label">Address line 3 :</label>
                    </div>
                    <div class="col-sm-3">
                        <input type="text" data-bind="value:OfficeAddress.AddressLine3" class="form-control" />
                    </div>
                    <div class="col-sm-1">

                    </div>

                </div>

                <div class="form-group row row_design">

                    <div class="col-sm-3 col-sm-offset-2">
                        <label class="control-label">Country :</label>
                    </div>
                    <div class="col-sm-3">
                        <select data-bind="options: CountryIdList, value: OfficeAddress.CountryId, optionsCaption:'Choose One..', optionsValue:'Id', optionsText: 'Name'" class="form-control"></select>
                    </div>
                    <div class="col-sm-1">

                    </div>

                </div>

                <div class="form-group row row_design">

                    <div class="col-sm-3 col-sm-offset-2">
                        <label class="control-label">Division :</label>
                    </div>
                    <div class="col-sm-3">
                        <select data-bind="options: OfficeAddress.DivisionList, value: OfficeAddress.DivisionId, optionsCaption:'Choose One..', optionsValue:'Id', optionsText: 'DivisionNameEng'" class="form-control"></select>
                    </div>
                    <div class="col-sm-1">

                    </div>

                </div>

                <div class="form-group row row_design">

                    <div class="col-sm-3 col-sm-offset-2">
                        <label class="control-label">District :</label>
                    </div>
                    <div class="col-sm-3">
                        <select data-bind="options: OfficeAddress.DistrictList, value: OfficeAddress.DistrictId, optionsCaption:'Choose One..', optionsValue:'Id', optionsText: 'DistrictNameEng'" class="form-control"></select>
                    </div>
                    <div class="col-sm-1">

                    </div>

                </div>

                <div class="form-group row row_design">

                    <div class="col-sm-3 col-sm-offset-2">
                        <label class="control-label">Thana :</label>
                    </div>
                    <div class="col-sm-3">
                        <select data-bind="options: OfficeAddress.ThanaList, value: OfficeAddress.ThanaId, optionsCaption:'Choose One..', optionsValue:'Id', optionsText: 'ThanaNameEng'" class="form-control"></select>
                    </div>
                    <div class="col-sm-1">

                    </div>
                </div>

                <div class="form-group row row_design">

                    <div class="col-sm-3 col-sm-offset-2">
                        <label class="control-label">Postal Code :</label>
                    </div>
                    <div class="col-sm-3">
                        <input type="number" data-bind="value:OfficeAddress.PostalCode" class="form-control" />
                    </div>
                    <div class="col-sm-1">

                    </div>
                </div>

                <div class="form-group row row_design">

                    <div class="col-sm-3 col-sm-offset-2">
                        <label class="control-label">Phone :</label>
                    </div>
                    <div class="col-sm-3">
                        <input type="text" data-bind="value:OfficeAddress.PhoneNo" class="form-control" />
                    </div>
                    <div class="col-sm-1">

                    </div>
                </div>
                <div class="form-group row row_design">

                    <div class="col-sm-3 col-sm-offset-2">
                        <label class="control-label">Cell Phone :</label>
                    </div>
                    <div class="col-sm-3">
                        <input type="text" data-bind="value:OfficeAddress.CellPhoneNo" class="form-control" />
                    </div>
                    <div class="col-sm-1">

                    </div>

                </div>
                <div class="form-group row row_design">

                    <div class="col-sm-3 col-sm-offset-2">
                        <label class="control-label">E-mail :</label>
                    </div>
                    <div class="col-sm-3">
                        <input type="email" data-bind="value:OfficeAddress.Email" class="form-control" />
                    </div>
                    <div class="col-sm-1">

                    </div>
                </div>

                <div class="form-group row row_design_detail">

                    <div class="col-sm-3 col-sm-offset-2">
                        <label for="ContactedPersonName" class="control-label" style="text-align: left;">Name of Person Contacted :</label>
                    </div>
                    <div class="col-sm-3">
                        <input type="text" id="ContactedPersonName" data-bind="value:ContactedPersonName" class="form-control" />
                    </div>

                </div>

                <div class="form-group row row_design_detail">

                    <div class="col-sm-3 col-sm-offset-2">
                        <label for="ContactedPersonDetails" class="control-label" style="text-align: left;">Details of Person Contacted :</label>
                    </div>
                    <div class="col-sm-3">
                        <textarea class="form-control" data-bind="value:ContactedPersonDetails" id="ContactedPersonDetails"></textarea>
                    </div>

                </div>
                <div class="form-group row row_design">
                    <div class="col-sm-3 col-sm-offset-2">
                        <label for="" class="control-label">Visit Report:</label>
                    </div>
                    <div class="col-sm-3">
                        <input type="file" name="VisitReportFile" id="VisitReportFile" data-bind="value:VisitReportFile" />
                        <a data-bind="attr:{href:  $root.getEditUrl($data) }, text: VisitReportFileName"> </a>
                    </div>
                </div>
                <div class="form-group row row_design_detail">
                    <div class="col-sm-3 col-sm-offset-2">
                        <label class="control-label">Verification Date & Time :</label>
                    </div>
                    <div class="col-sm-3 input-group input-group_cif date" style="padding-left: 15px; padding-right: 15px; padding-bottom: 2px;">

                        <input data-bind="value:VisitTimeText" id="VarificationDateId" class="form-control" type="text">

                        <div class="input-group-addon">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </div>
                    </div>

                </div>
                <div class="form-group row row_design_detail">
                    <div class="col-sm-3 col-sm-offset-2">
                        <label for="VerificationState" class="control-label" style="text-align: left;">Verification Status :</label>
                    </div>
                    <div class="col-sm-2">

                        <label class="radio-inline"><input type="radio" value="1" data-bind="checked: VerificationStatus">Verification Pending</label>
                    </div>
                    <div class="col-sm-2">
                        <label class="radio-inline"><input type="radio" value="2" data-bind="checked: VerificationStatus">Verified</label>
                    </div>
                    <div class="col-sm-2">
                        <label class="radio-inline"><input type="radio" value="0" data-bind="checked: VerificationStatus">Not Required</label>
                    </div>

                </div>
                @*<div class="form-group row row_design_detail">
                        <div class="col-sm-3 col-sm-offset-2">
                            <label for="Description" class="control-label" style="text-align: left;">Description :</label>
                        </div>
                        <div class="col-sm-3">
                            <textarea class="form-control" data-bind="value:Description" id="Description"></textarea>
                        </div>
                    </div>
                    <div class="form-group row row_design_detail">
                        <div class="col-sm-3 col-sm-offset-2">
                            <label for="Observation" class="control-label" style="text-align: left;">Observation :</label>
                        </div>
                        <div class="col-sm-3">
                            <textarea class="form-control" data-bind="value:Observation" id="Observation"></textarea>
                        </div>
                    </div>*@
                <br />
                <div class="form-group row row_design">

                    <div class="col-sm-4 pull-right">
                        <button type="button" class="btn-q btn-default" data-bind="click:Submit">Save</button>
                        @*<button type="button" class="btn btn-success" data-bind="click:Edit">Save</button>*@
                    </div>
                </div><br />
                <div class="form-group">
                    <div id="SuccessModal" class="modal fade" role="dialog">
                        <div class="modal-dialog modal-sm">
                            <!-- Modal content-->
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                                    <h4 class="modal-title">Response</h4>
                                </div>
                                <div class="modal-body" align="center">
                                    <p id="SuccessModalText"></p>

                                    <button type="button" class="btn btn-success" data-dismiss="modal">Ok</button>

                                </div>
                                <div class="modal-footer">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>
    </div>

</section>

