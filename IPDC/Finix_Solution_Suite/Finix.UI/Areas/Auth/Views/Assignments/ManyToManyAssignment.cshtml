@{
    ViewBag.Title = "Many To Many Assignment(s)";
    Layout = "~/Views/Shared/_LayoutjqGrid.cshtml";
}
<script src="~/Scripts/bootstrap-table.js"></script>
<script src="~/Areas/Auth/Scripts/many2many.js"></script>
<link href="~/Content/customassets/css/MtoMAssignment.css" rel="stylesheet" />

<div id="dvMany2Many">
    <div class="row">
        <div class="col-md-3">
            <select data-bind="options: leftDdlData, value: leftDdlSelectedItem,optionsValue:'key',optionsText: 'value',optionsCaption: '...Select One...'" class=" form-control"></select>
        </div>
        <div class="col-md-3">
            <select data-bind="options: rightDdlData, value: rightDdlSelectedItem,optionsValue:'key',optionsText: 'value',optionsCaption: '...Select One...'" class=" form-control"></select>
        </div>
        <div class="col-md-3">
            <button type="button" class="btn-q btn-success" data-bind="click: loadData">
                Load Data
            </button>
        </div>
        <div class="col-md-3">

            <button type="button" class="btn btn-success btn-success pull-right" data-bind="click: saveMany2ManyAssignments" style="margin-right: 10px">
                Save
            </button>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h6 class="panel-title">
                        <!--ko text: leftDdlSelectedItem--><!--/ko-->
                    </h6>
                </div>
                <div class="panel-body">
                    <div class="fixed-panel">
                        <table class="table table-striped table-bordered">
                            <thead class="headcolor">
                                <tr>
                                    <th>Select</th>
                                    <th>Id</th>
                                    <th>Description</th>
                                </tr>
                            </thead>

                            <tbody data-bind="foreach: leftTableData">
                                <tr data-bind="css:{warning:($parent.leftTableSelectedItemId()==$data.id)}">
                                    <td>
                                        <input type="radio" name="leftTableData" data-bind="value:$data.id, checked:$parent.leftTableSelectedItemId" />
                                    </td>
                                    <td data-bind="text: $data.id"></td>
                                    <td data-bind="text: $data.description"></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h6 class="panel-title">
                        <!--ko text: rightDdlSelectedItem--><!--/ko-->
                    </h6>
                </div>
                <div class="panel-body">
                    <div class="fixed-panel">
                        <table class="table table-striped table-bordered">
                            <thead class="headcolor">
                                <tr>
                                    <th><input type="checkbox" data-bind="click: selectRightTablesAllData" /></th>
                                    <th>Id</th>
                                    <th>Description</th>
                                </tr>
                            </thead>

                            <tbody data-bind="foreach: rightTableData">
                                <tr data-bind="css: {warning:selected }">
                                    <td><input type="checkbox" data-bind="checked: selected" /></td>
                                    <td data-bind="text: $data.id"></td>
                                    <td data-bind="text: $data.description"></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>